{
  "name": "magnus-ai",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "web:dev": "npm run dev --workspace apps/web",
    "web:lint": "npm run lint --workspace apps/web",
    "web:typecheck": "npm run typecheck --workspace apps/web",
    "web:test": "npm run test --workspace apps/web",
    "web:build": "npm run build --workspace apps/web",
    "api:dev": "node tools/scripts/run_api_dev.mjs",
    "api:lint": "ruff check --config apps/api/pyproject.toml apps/api",
    "api:format": "black --config apps/api/pyproject.toml apps/api",
    "api:format-check": "black --config apps/api/pyproject.toml --check apps/api",
    "api:test": "pytest -c apps/api/pyproject.toml apps/api",
    "api:migrate": "alembic -c apps/api/alembic.ini upgrade head",
    "api:rollback": "alembic -c apps/api/alembic.ini downgrade -1",
    "ci": "npm run web:lint && npm run web:typecheck && npm run web:test && npm run web:build && npm run api:lint && npm run api:format-check && npm run api:test"
  }
}
